#!/bin/bash

mkdir -p /tmp/rom
cd /tmp/rom || exit

#google api
echo "$apicode" >>./script1.sh && chmod +x ./script1.sh && bash ./script1.sh

# Repo init
repo init -q --no-repo-verify --depth=1 -u git://github.com/AospExtended/manifest.git -b 11.x -g default,-device,-mips,-darwin,-notdefault

# Local Manifest
git clone https://github.com/jrchintu/android_.repo_local_manifests.git --depth 1 -b debloat .repo/local_manifests

# Sync source
repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j 30 ||
    repo sync -c --no-clone-bundle --no-tags --optimized-fetch --prune --force-sync -j 8
